import json

def generate_policy(principal_id, effect, resource):
    """Generate an IAM policy for API Gateway."""
    return {
        "principalId": principal_id,
        "policyDocument": {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Action": "execute-api:Invoke",
                    "Effect": effect,
                    "Resource": resource
                }
            ]
        }
    }

def lambda_handler(event, context):
    # Extract cookies from the event
    headers = event.get("headers", {})
    cookies = headers.get("Cookie", "")  # e.g., "token=my-token; other=val"

    # Parse cookies into a dictionary
    cookie_dict = {}
    if cookies:
        for cookie in cookies.split(";"):
            if "=" in cookie:
                key, value = cookie.strip().split("=", 1)
                cookie_dict[key] = value

    # Check if token exists in cookies (for now, just presence, no validation)
    token = cookie_dict.get("token", "")
    if not token:
        raise Exception("Unauthorized: Token missing in cookies")

    # Token exists, allow the request to proceed
    return generate_policy("user", "Allow", event["methodArn"])